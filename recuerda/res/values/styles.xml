<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
    </style>
    
    <style name="fondoGeneral" parent="AppTheme">
        <item name="android:background">@drawable/main_frame</item>
    </style>
    
    <style name="ItemMenu" parent="AppBaseTheme">
        <item name="android:textColor">#000000</item>

        
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="TextDetailName" parent="AppBaseTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="TextDetailRelation" parent="AppBaseTheme">
        <item name="android:textColor">#7F7A7A</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="ItemMenuShadow" parent="AppBaseTheme">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">6</item>
    	<item name="android:shadowDy">6</item>
    	<item name="android:shadowRadius">12</item>
    </style>
    
    <style name="backgroundItemMenu" parent="AppBaseTheme">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">6</item>
    	<item name="android:shadowDy">6</item>
    	<item name="android:shadowRadius">6</item>
    </style>
    
    <style name="frasesDialog" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>        
        <item name="android:textStyle">italic</item>        
    </style>
    <style name="autorFrasesDialog" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>        
        <item name="android:textStyle">italic</item>        
    </style>
    <style name="frasesTitDialog" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>        
    </style>
    
    
</resources>
