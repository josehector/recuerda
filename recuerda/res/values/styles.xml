<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
    </style>
    
    <style name="fondoGeneral" parent="AppTheme">
        <item name="android:background">@drawable/main_frame</item>
    </style>
    
    <style name="ItemMenu" parent="AppBaseTheme">
        <item name="android:textColor">#eeecce</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">4</item>
    	<item name="android:shadowDy">4</item>
    	<item name="android:shadowRadius">4</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="TextDetail" parent="AppBaseTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#eeecce</item>
        <item name="android:shadowDx">4</item>
    	<item name="android:shadowDy">4</item>
    	<item name="android:shadowRadius">4</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="ItemMenuShadow" parent="AppBaseTheme">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">6</item>
    	<item name="android:shadowDy">6</item>
    	<item name="android:shadowRadius">12</item>
    </style>
    
    <style name="backgroundItemMenu" parent="AppBaseTheme">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">6</item>
    	<item name="android:shadowDy">6</item>
    	<item name="android:shadowRadius">6</item>
    </style>
    
</resources>
